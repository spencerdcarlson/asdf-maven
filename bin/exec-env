#!/usr/bin/env bash
# set JAVA_HOME via asdf java if JAVA_HOME is not already set
if [ -z $JAVA_HOME ] ; then
  if asdf current java > /dev/null 2>&1 ; then
    asdf_java_version=$(asdf current java | sed -s 's|\(.*\) \?(.*|\1|g')
    export JAVA_HOME=$(asdf where java "$asdf_java_version")
  fi
fi
